<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Total Balance Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/totalBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/totalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Account Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accounts"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/accountsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accounts will be displayed here"
                    android:textSize="17sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Credit Card Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credit Cards"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/creditCardTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit Card details will be displayed here"
                    android:textSize="17sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Loan Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loans"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/loanDetailsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan details will be displayed here"
                    android:textSize="17sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/returnToFirstPageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="First Page"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/goToUserPageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
